<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                tools:context="com.dance.chd.chddance.view.fragment.PartyMode">

    <LinearLayout
        android:id="@+id/exotic_party_buttonset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/button_cheap"
            style="@style/ButtonTheme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/button_cheap"/>

        <Button
            android:id="@+id/button_intermediate"
            style="@style/ButtonTheme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/button_intermediate"/>

        <Button
            android:id="@+id/button_expensive"
            style="@style/ButtonTheme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/button_expensive"/>

    </LinearLayout>

    <TextView
        android:id="@+id/current_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:gravity="top|center_horizontal"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/heading_G"
        android:textStyle="bold"/>

    <FrameLayout
        android:id="@+id/money_drag_image_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/exotic_party_buttonset"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="bottom"/>

</RelativeLayout>
